{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@fancy-form-nx/store": ["libs/shared/store/src/index.ts"],
      "@fancy-form-nx/ui": ["libs/shared/ui/src/index.ts"],
      "@fancy-form-nx/utils": ["libs/shared/utils/src/index.ts"]
    }
  }
}
